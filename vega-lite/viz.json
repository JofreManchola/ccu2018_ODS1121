{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
        "url": "https://raw.githubusercontent.com/JofreManchola/ccu2018_ODS1121/master/visor/widgets/Paraderos/distribucionupz.json",
        "format": {
            "type": "json"
        }
    },
    "title": "Distribución de género por UPZ",
    "hconcat": [
        {
            "vconcat": [
                {
                    "mark": "tick",
                    "height": 600,
                    "encoding": {
                        "y": {
                            "type": "nominal",
                            "field": "UPlNombre",
                            "axis": {
                                "title": "UPZ"
                            }
                        },
                        "color": {
                            "value": "grey"
                        },
                        "tooltip": [
                            {
                                "field": "UPlNombre",
                                "type": "nominal",
                                "title": "UPlNombre"
                            },
                            {
                                "field": "OBJECTID",
                                "type": "quantitative",
                                "title": "OBJECTID",
                                "format": ","
                            }
                        ]
                    },
                    "selection": {
                        "selupz": {
                            "type": "interval",
                            "empty": "none",
                            "encodings": [
                                "y"
                            ],
                            "on": "[mousedown, window:mouseup] > window:mousemove!",
                            "translate": "[mousedown, window:mouseup] > window:mousemove!",
                            "zoom": "wheel!",
                            "mark": {
                                "fill": "#333",
                                "fillOpacity": 0.125,
                                "stroke": "white"
                            },
                            "resolve": "global"
                        }
                    }
                }
            ]
        },
        {
            "vconcat": [
                {
                    "layer": [
                        {
                            "mark": "line",
                            "width": 300,
                            "height": 300,
                            "encoding": {
                                "x": {
                                    "type": "ordinal",
                                    "field": "UPlCodigo",
                                    "axis": {
                                        "title": "UPZ"
                                    }
                                },
                                "y": {
                                    "type": "quantitative",
                                    "field": "Hombres_20",
                                    "axis": {
                                        "title": "Hombres [%]"
                                    }
                                }
                            }
                        },
                        {
                            "mark": "line",
                            "width": 300,
                            "height": 300,
                            "encoding": {
                                "x": {
                                    "type": "ordinal",
                                    "field": "UPlCodigo",
                                    "axis": {
                                        "title": "UPZ"
                                    }
                                },
                                "y": {
                                    "type": "quantitative",
                                    "field": "Mujeres_20",
                                    "axis": {
                                        "title": "Mujeres [%]"
                                    }
                                },
                                "color": {
                                    "value": "purple"
                                }
                            }
                        },
                        {
                            "mark": "circle",
                            "width": 300,
                            "height": 300,
                            "encoding": {
                                "x": {
                                    "type": "ordinal",
                                    "field": "UPlCodigo",
                                    "axis": {
                                        "title": "UPZ"
                                    }
                                },
                                "y": {
                                    "type": "quantitative",
                                    "field": "Cnt_UPlCod",
                                    "axis": {
                                        "title": "Paraderos"
                                    }
                                },
                                "color": {
                                    "value": "purple"
                                }
                            }
                        }
                    ]
                },
                {
                    "mark": "circle",
                    "width": 300,
                    "height": 300,
                    "encoding": {
                        "x": {
                            "type": "ordinal",
                            "field": "UPlCodigo",
                            "axis": {
                                "title": "UPZ"
                            }
                        },
                        "y": {
                            "type": "quantitative",
                            "field": "Cnt_UPlCod",
                            "axis": {
                                "title": "Paraderos"
                            }
                        },
                        "color": {
                            "condition": {"selection": "selupz", "value": "black"},
                            "value": "purple"
                        }
                    }
                }
            ]
        }
    ],
    "config": {}
}